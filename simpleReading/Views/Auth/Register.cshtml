@model simpleReading.Models.User
@{
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
    ViewData["Title"] = "Register";
}

<h3>Register</h3>

<form asp-action="Register" method="post">
    <div class="form-group">
        <label asp-for=" Username"></label>
        <input class="form-control" asp-for="Username" />
        <span asp-validation-for="Username"></span>
    </div>

    <div class="form-group">
        <label asp-for="Email"></label>
        <input class="form-control" asp-for="Email" />
        <span asp-validation-for="Email"></span>
    </div>

    <div class="form-group">
        <label asp-for="Password"></label>
        <input class="form-control" asp-for="Password" />
        <span asp-validation-for="Password"></span>
    </div>
    <br />
    <button class="btn btn-primary" type="submit">Criar nova conta</button>
</form>

<button class="btn btn-secondary" value="Redirect" onclick="window.location='@Url.Action("Login", "Auth")'">Entrar com conta existente</button>
